    <link rel="stylesheet" href="node_modules/bootstrap-social/bootstrap-social.css" type="text/css">
    <link rel="stylesheet" href="css/styles.css">
    <title>Know your Fest</title>
</head>

<body>
    <nav class="navbar-dark bg-me navbar-expand-sm">
        <div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#Navbar">
                <span class="navbar-toggler-icon"></span>
            </button>


            <div class="container ml-4">
            <div class="collapse navbar-collapse" id="Navbar">
                <ul class="navbar-nav">
                    <a class="navbar-brand" href="#">KYF</a>
                        <li class="nav-item active"><a class="nav-link" href="./index.html">Home&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                        <li class="nav-item"><a class="nav-link" href="./aboutus.html">About&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Menu&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Contact&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
                </ul>
            </div>
            </div>
        </div>
    </nav>

    <section>

        <div>
            <div>
                <div class="blueback">
                    <div class="section-content">
                      <%for(i=0;i<notification.length;i++){%>
                        <span class="homepageupsection"><a><%=notification[i].text%></a></span>
                      <%}%>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <header class="jumbotron">
        <div class="container">
            <div class="row row-header">
                <div class="col-12 col-sm-6 offset-sm-3">
                    <h1><center>KNOW YOUR FEST</center></h1>
                    <p><center>A Place to get your fests right</center></p>
                </div>
            </div>
        </div>
    </header>

    <%for(i=0;i<All_college.length;i++){%>
      <% if(All_college[i].show == "off"){ %>
      <%  continue; %>
      <%}%>
      <% if(All_college[i].remaing_days == -1){ %>
      <%  continue; %>
      <%}%>
        <div class="container">
            <div class="row row-content align-items-center">
                <div class="col-12 col-sm-4 col-md-3">
                    <a href="/fests/<%=All_college[i].name%> " class="homepage_link"><h3 class = "collegename"><%=All_college[i].name%></h3></a>
                </div>
                <div class="col col-sm col-md">
                    <div class="media">
                        <div class="media-body">
                          <%if(All_college[i].date == ""){%>
                          <% badge_name = "badge-primary";%>
                          <%  text="Coming Soon" %>
                          <%}else if(All_college[i].remaing_days==0){%>
                           <% badge_name = "badge-success";%>
                           <% text = "Active"%>
                          <% } else if(All_college[i].remaing_days<30){%>
                          <%    badge_name = "badge-danger";%>
                          <% text = All_college[i].remaing_days+" days to go"%>
                          <%} else{%>
                          <%    badge_name = "badge-primary";%>
                          <% text = new Date(All_college[i].date);%>
                          <% text = text.toLocaleDateString("en-US",{month:"long",day: "numeric",year:"numeric"})%>
                          <%}%>
                            <h2 class="mt-0"><%=All_college[i].venue%>  <span class="badge <%=badge_name%>" ><%=text%></span></h2>
                            <p class="d-none d-sm-block"><%=All_college[i].description%></p>
                        </div>
                        <div class="polaroid mr-1">
                            <img src=<%=All_college[i].image_url%> alt="image" style="width:100%" height="150">
                        </div>
                    </div>
                </div>
            </div>
          </div>
    <%}%>

<nav class="navbar-light bgdown navbar-expand">
    <div>
        <div class="container ml-4">
        <div class="collapse navbar-collapse" id="Navbar">
